<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id='@+id/player_deck'
        android:contentDescription="Player's deck"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="5dp"
        android:src="@drawable/red_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/player_card"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="120dp"
        android:contentDescription="Player's card"
        android:src="@drawable/red_back"
        app:layout_constraintBottom_toBottomOf="@+id/player_deck"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/opponent_card"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="120dp"
        android:contentDescription="Opponent's card"
        android:src="@drawable/red_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponent_deck" />

    <ImageView
        android:id='@+id/opponent_deck'
        android:contentDescription="Opponent's deck"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="5dp"
        android:src="@drawable/red_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>